<script>
    $('#btn-filtrar').on('click', function(){
        waitingDialog.show('Carregando...');
        
        obterDadosDashboard(anoExecucao)
        .then(function(estatisticas, analitico) {
            preencherDashboard(estatisticas, analitico);
            updateFilterBadges('#filter-badges-list', '#filtros-lista');
        })
        .fail(function(err) {
            switch (err.status) {
                case 404:
                    bootbox.alert({
                        title: 'Que pena...',
                        message: 'Os filtros que você está tentando aplicar não retornaram nenhum resultado...',
                    });
                    break;
                default:
                    bootbox.alert({
                        title: 'Ops...',
                        message: 'Algo deu errado com a sua solicitação. Por favor, tente novamente e caso o erro persista contate a GEOTR.',
                        callback: function() {
                            path = routes.dashboard.path.replace(':anoExecucao', new Date().getFullYear());
                            context.redirect(path);
                        }
                    })
            }
        })
        .always(function() {
            waitingDialog.hide();
        })
    });
</script>
<script>
    $('#btn-download-csv').on('click', function(event) {
        siglaGestor = stringIsEmpty($('#lista-gestores').val()) ? '': $('#lista-gestores').val();
        tipoInformacaoId = stringIsEmpty($('#set-operacoes').val()) ? 3: $('#set-operacoes').val();
        
        urlSearchParams = new URLSearchParams();
        urlSearchParams.set('siglaGestor', siglaGestor);
        urlSearchParams.set('tipoInformacaoId', tipoInformacaoId);

        href = $(this).prop('href') + '?' + urlSearchParams.toString();
        $(this).prop('href', href);
    })
</script>
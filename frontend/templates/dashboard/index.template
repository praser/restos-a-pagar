<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Gestão de possíveis bloqueios da safra <%= anoExecucao -2 %> - <%= user.physical_lotation_abberviation %></h1>
    <div>
        <a href="#/operacoes/passiveis-bloqueio/<%= anoExecucao %>" id="btn-download-csv" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-download fa-sm text-white-50"></i> Download da base csv
        </a>
        <button type="button" class="d-none d-sm-inline-block btn btn-sm btn-info shadow-sm" data-toggle="modal" data-target="#filter-modal">
            <i class="fas fa-filter fa-sm text-white-50"></i> Filtros
        </button>
    </div>
</div>
<div class="row mb-4">
    <h2 class="col-12 h5"><i class="fas fa-calendar-alt fa-sm"></i> Data do bloqueio: <span id="data-bloqueio"></span></h2>
    <h5 class="col-12"><i class="fas fa-filter fa-sm"></i> Filtros ativos: <span id="filter-badges-list"></span></h5>
</div>

<!-- Modal -->
<div class="modal right fade" id="filter-modal" tabindex="-1" role="dialog" aria-labelledby="filterModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title" id="filterModal">Filtros</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>

            <div class="modal-body" id="filtros-lista">
                <div class="form-group mr-2" data-rbac-roles="administrador,gestor">
                    <select id="lista-unidades-rede" class="form-control" name="unidade-rede">
                        <option value="">Todas as GIGOV/REGOV</option>
                    </select>
                </div>

                <div class="form-group mr-2">
                    <select id="lista-gestores" class="form-control" name="gestores">
                        <option value="">Todos os gestores</option>
                    </select>
                </div>

                <div class="form-group mr-2">
                    <select id="set-operacoes" class="form-control" name="set-operacoes">
                    </select>
                </div>

                <div class="fomr-group text-center">
                    <button id="btn-filtrar" class="btn btn-sm btn-outline-info shadow-sm" type="button">
                        <i class="fas fa-check-circle"></i>   
                        Aplicar filtros 
                    </button>
                </div>
            </div>

        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div><!-- modal -->

